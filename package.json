{
  "name": "poseidon",
  "version": "0.1.0",
  "description": "Framework web API to build CRUD aplications",
  "repository": {
    "type": "git",
    "url": "https://github.com/Leandro-Albano/poseidon.git"
  },
  "author": "Leandro Albano",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Leandro-Albano/poseidon/issues"
  },
  "homepage": "https://github.com/Leandro-Albano/poseidon",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "ajv": "5.1.5",
    "body-parser": "1.17.2",
    "compression": "1.6.2",
    "dotenv": "4.0.0",
    "express": "4.14.0",
    "express-validator": "3.1.3",
    "json-schema-fluent-builder": "0.9.12",
    "lodash": "4.17.4",
    "lokijs": "1.5.0",
    "mongodb": "2.2.27",
    "morgan": "1.7.0",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/compression": "0.0.33",
    "@types/dotenv": "^4.0.0",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-validator": "^2.20.33",
    "@types/lodash": "^4.14.64",
    "@types/lokijs": "^1.2.30",
    "@types/mongodb": "^2.2.2",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.22",
    "@types/winston": "^2.3.2",
    "@types/ajv": "1.0.0",
    "concurrently": "^3.4.0",
    "jest": "^19.0.2",
    "node-sass": "^4.5.2",
    "nodemon": "1.11.0",
    "tslint": "^5.0.0",
    "typescript": "2.4.1",
    "errorhandler": "1.4.3"
  }
}
