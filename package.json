    "http-status-codes": "1.4.0",
    "json-schema-fluent-builder": "^0.10.3",
    "koa": "2.11.0",
    "koa-bodyparser": "4.2.1",
    "koa-compress": "3.0.0",
    "koa-logger": "3.2.1",
    "koa-router": "7.4.0",
