    "@types/koa-router": "7.4.0",
    "@types/lodash": "4.14.149",
    "@types/lokijs": "1.5.3",
    "@types/mocha": "5.2.7",
    "@types/mongodb": "3.3.14",
    "@types/node": "13.1.8",
    "chai": "4.2.0",
    "mocha": "7.0.0",
    "nodemon": "2.0.2",
    "rimraf": "3.0.0",
    "ts-node": "8.6.2",
    "tslint": "5.20.1",
